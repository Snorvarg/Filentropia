<Window x:Class="Filentropia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filentropia"
        mc:Ignorable="d"
        Title="Filentropia" Height="450" Width="800">
    <Grid>

        <Button x:Name="AddNewFolderButton" Content="Add folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="AddNewFolderButton_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,35,10,139">
            <StackPanel x:Name="FolderListenersStackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</Window>
