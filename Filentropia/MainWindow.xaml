<Window x:Class="Filentropia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filentropia"
        mc:Ignorable="d"
        Title="Filentropia" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddFolderButton" Content="Select folder" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Top" Click="AddFolder_Click"/>
        <Label x:Name="SelectedFolderLabel" Content="Selected folder: mjau" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ShareFolderButton" Content="Share folder" HorizontalAlignment="Stretch" Margin="10,65,10,10" VerticalAlignment="Top" Click="ShareFolderButton_Click"/>
        <Button x:Name="UnshareFolderButton" Content="Unshare folder" HorizontalAlignment="Stretch" Margin="10,89,10,10" VerticalAlignment="Top" Click="UnshareFolderButton_Click"/>
        <Button x:Name="SelectFolder2Button" Content="Folder 2" HorizontalAlignment="Left" Margin="594,35,0,0" VerticalAlignment="Top" Width="196" Click="SelectFolder2Button_Click"/>

    </Grid>
</Window>
